<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNoteActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <EditText
            android:id="@+id/edtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:layout_centerHorizontal="true"
            android:ems="20" />

        <EditText
            android:id="@+id/edtDesc"
            android:layout_width="wrap_content"
            android:layout_height="241dp"
            android:layout_below="@id/edtTitle"
            android:ems="20"
            android:hint="Description"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_below="@+id/edtDesc"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/picture_add" />

        <ImageView
            android:id="@+id/imageViewRecord"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@id/imageView"

            android:layout_marginStart="130dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/ic_action_mic_off" />

        <ImageView
            android:id="@+id/imageViewStop"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@id/imageView"
            android:layout_toEndOf="@id/imageViewRecord"
            app:srcCompat="@drawable/ic_action_stop" />

        <ImageView
            android:id="@+id/imageViewPlay"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@id/imageView"
            android:layout_toEndOf="@id/imageViewStop"
            app:srcCompat="@drawable/ic_action_play" />


    </RelativeLayout>



</ScrollView>